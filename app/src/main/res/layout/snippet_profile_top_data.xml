<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">


        <TextView
            android:id="@+id/posts_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="12"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/posts_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Posts"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/posts_number_tv" />

        <TextView
            android:id="@+id/followers_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="820"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@id/following_number_tv"
            app:layout_constraintStart_toEndOf="@id/posts_number_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/followers_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/following_tv"
            app:layout_constraintStart_toEndOf="@id/posts_tv"
            app:layout_constraintTop_toBottomOf="@+id/followers_number_tv" />

        <TextView
            android:id="@+id/following_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="712"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/following_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Following"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/following_number_tv" />

        <TextView
            android:id="@+id/profile_edit_profile_tv"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/grey_border"
            android:text="Edit your profile"
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/followers_text"
            app:layout_constraintVertical_bias="0.001" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>